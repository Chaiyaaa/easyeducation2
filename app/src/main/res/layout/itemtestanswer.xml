<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">


    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/backgroundblue"
        android:background="@drawable/custumborder"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal"


        >




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/elevenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/orange"
                android:text="Nom"
                />

            <TextView
                android:id="@+id/eleveprenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/orange"
                android:text="prenom"
                />

        </LinearLayout>


        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/testnameA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test name"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/backgroundlight"
                />

            <TextView
                android:id="@+id/datetestA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/backgroundlight"
                />

        </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>