<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp"
    android:background="@color/backgroundblue"
    app:cardElevation="80dp"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_margin="2dp"
        android:backgroundTint="@color/backgroundblue"
        android:background="@drawable/custumborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/modulename_devoir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Module name" />

        <TextView
            android:id="@+id/devoirname"
            android:layout_margin="5dp"
            android:textColor="@color/backgroundlight"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devoir name"
            />

        <TextView
            android:id="@+id/datedevoir"
            android:layout_margin="5dp"
            android:textColor="@color/backgroundlight"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>